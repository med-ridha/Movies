@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h2>List Movies</h2>
    <form method="get">
        <div>
            <label for="searchGenre">Genre to look for:</label>
            <input type="text" name="searchGenre"
                   value="" />
            <input type="Submit" value="Search Genre" /><br />
            (Leave blank to list all movies.)<br />
        </div>
        <div>
            <label for="SearchTitle">Movie title contains the following:</label>
            <input type="text" name="searchTitle" value="" />
            <input type="Submit" value="Search Title" /><br />
        </div>
    </form>
    <div>
        <table border="1">
            <thead>
                <tr>
                    <th>Edit</th>
                    <th>Title</th>
                    <th>Genre</th>
                    <th>Year</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><a href="#">Edit</a></td>
                    <td>The Godfather</td>
                    <td>Crime/Drama</td>
                    <td>1972</td>
                    <td><a href="#">Delete</a></td>
                </tr>
                <tr>
                    <td><a href="#">Edit</a></td>
                    <td>Forrest Gump</td>
                    <td>Drama/Comedy</td>
                    <td>1994</td>
                    <td><a href="#">Delete</a></td>
                </tr>
                <tr>
                    <td><a href="#">Edit</a></td>
                    <td>The Dark Knight</td>
                    <td>Action/Thriller</td>
                    <td>2008</td>
                    <td><a href="#">Delete</a></td>
                </tr>
            </tbody>
        </table>

    </div>
    <p><a href="~/AddAMovie">Add a movie</a></p>
</div>
